<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jungi.theme.form.type.theme.class">Jungi\Bundle\ThemeBundle\Form\Type\ThemeType</parameter>
    </parameters>

    <services>
        <service id="jungi.theme.form.type.theme" class="%jungi.theme.form.type.theme.class%">
            <tag name="form.type" alias="jungi_theme" />
            <argument type="service" id="jungi.theme.manager" />
        </service>
    </services>
</container>
