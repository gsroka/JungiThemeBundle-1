<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jungi.theme.selector.listener.class">Jungi\Bundle\ThemeBundle\Selector\EventListener\ThemeSelectorListener</parameter>
        <parameter key="jungi.theme.resolver.listener.class">Jungi\Bundle\ThemeBundle\Resolver\EventListener\ThemeResolverListener</parameter>
        <parameter key="jungi.theme.selector.listener.validation.class">Jungi\Bundle\ThemeBundle\Selector\EventListener\ValidationListener</parameter>
        <parameter key="jungi.theme.selector.listener.device_switch.class">Jungi\Bundle\ThemeBundle\Selector\EventListener\DeviceThemeSwitch</parameter>
    </parameters>

    <services>
        <service id="jungi.theme.resolver.listener" class="%jungi.theme.resolver.listener.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="jungi.theme.resolver" />
        </service>
        <service id="jungi.theme.selector.listener" class="%jungi.theme.selector.listener.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="jungi.theme.selector" />
        </service>
        <service id="jungi.theme.selector.listener.device_switch" class="%jungi.theme.selector.listener.device_switch.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="jungi.theme.mobile_detect" />
        </service>
        <service id="jungi.theme.selector.listener.validation" class="%jungi.theme.selector.listener.validation.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="validator" />
            <!-- investigator -->
        </service>
    </services>
</container>
