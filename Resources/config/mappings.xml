<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jungi.theme.mapping.loader.xml.class">Jungi\Bundle\ThemeBundle\Mapping\Loader\XmlFileLoader</parameter>
        <parameter key="jungi.theme.mapping.loader.yml.class">Jungi\Bundle\ThemeBundle\Mapping\Loader\YamlFileLoader</parameter>
        <parameter key="jungi.theme.mapping.loader.php.class">Jungi\Bundle\ThemeBundle\Mapping\Loader\PhpFileLoader</parameter>
        <parameter key="jungi.theme.mapping.loader.helper.class">Jungi\Bundle\ThemeBundle\Mapping\Loader\LoaderHelper</parameter>
    </parameters>

    <services>
        <service id="jungi.theme.mapping.loader.helper" class="%jungi.theme.mapping.loader.helper.class%" public="false">
            <argument type="service" id="jungi.theme.tag.registry" />
        </service>
        <service id="jungi.theme.mapping.loader.xml" class="%jungi.theme.mapping.loader.xml.class%">
            <argument type="service" id="jungi.theme.manager" />
            <argument type="service" id="file_locator" />
            <argument type="service" id="jungi.theme.tag.factory" />
            <argument type="service" id="jungi.theme.mapping.loader.helper" />
        </service>
        <service id="jungi.theme.mapping.loader.yml" class="%jungi.theme.mapping.loader.yml.class%">
            <argument type="service" id="jungi.theme.manager" />
            <argument type="service" id="file_locator" />
            <argument type="service" id="jungi.theme.tag.factory" />
            <argument type="service" id="jungi.theme.mapping.loader.helper" />
        </service>
        <service id="jungi.theme.mapping.loader.php" class="%jungi.theme.mapping.loader.php.class%">
            <argument type="service" id="jungi.theme.manager" />
            <argument type="service" id="file_locator" />
            <argument type="service" id="jungi.theme.tag.factory" />
        </service>
    </services>
</container>
